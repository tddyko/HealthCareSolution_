<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gchc.ing.MainActivity">

    <LinearLayout
        style="@style/common_parent_style"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:orientation="vertical">


    <LinearLayout
        android:id="@+id/weight_targer_LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.gchc.ing.component.CFontTextView
                style="@style/common_textview_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_goal_height"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/etWeightTargetWg"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="78"
                android:inputType="number"
                style="@style/common_edittext_style"
                android:textAlignment="textEnd"
                android:enabled="false"
                android:paddingRight="15dp"/>

            <com.gchc.ing.component.CFontTextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="kg"
                style="@style/common_textview_ea"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_metrytime"
                android:layout_weight="1"

                android:layout_marginTop="10dp"
                style="@style/common_textview_fields" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontTextView
                android:id="@+id/weight_input_date_textview"
                style="@style/common_edittext_style"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:cursorVisible="false"
                android:inputType="none"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="2016.05.20 금요일"
                android:tag=""/>

            <com.gchc.ing.component.CFontTextView
                android:id="@+id/weight_input_time_textview"
                style="@style/common_edittext_style"
                android:layout_width="0dp"
                android:layout_weight="2"
                android:cursorVisible="false"
                android:inputType="none"
                android:maxLines="1"
                android:singleLine="true"
                android:hint="오전 11:40"
                android:tag=""/>


        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.gchc.ing.component.CFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_weight"
                android:layout_weight="1"
                style="@style/common_textview_fields"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/etWeightWg"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:hint="60.5"
                android:inputType="numberDecimal"
                style="@style/common_edittext_style"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"/>

            <com.gchc.ing.component.CFontTextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="kg"
                style="@style/common_textview_ea"/>
        </LinearLayout>






        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.gchc.ing.component.CFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_bodyfatrate"
                android:layout_weight="1"
                style="@style/common_textview_fields" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/etWeightBodyRate"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="38"
                android:inputType="numberDecimal"
                style="@style/common_edittext_style"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"/>

            <com.gchc.ing.component.CFontTextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.gchc.ing.component.CFontTextView
                android:id="@+id/CFontTextView9"
                style="@style/common_textview_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_bodyfatvolume" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/etWeightInnerVolume"
                style="@style/common_edittext_style"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="75"
                android:inputType="numberDecimal"
                android:paddingRight="15dp"
                android:textAlignment="textEnd"/>

            <com.gchc.ing.component.CFontTextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.gchc.ing.component.CFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_stomachrate"
                android:layout_weight="1"
                style="@style/common_textview_fields" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/etWeightWaterVolume"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="55"
                android:inputType="numberDecimal"
                style="@style/common_edittext_style"
                android:textAlignment="textEnd"
                android:paddingRight="15dp"/>

            <com.gchc.ing.component.CFontTextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <com.gchc.ing.component.CFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_musclevolume"
                android:layout_weight="1"
                style="@style/common_textview_fields"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/etWeightMuscleVolume"
                style="@style/common_edittext_style"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="1212"
                android:inputType="numberDecimal"
                android:paddingRight="15dp"
                android:textAlignment="textEnd" />

            <com.gchc.ing.component.CFontTextView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="%"
                style="@style/common_textview_ea"/>
        </LinearLayout>

        <com.gchc.ing.component.CFontButton
            android:id="@+id/weight_input_save_btn"
            android:textColor="@color/colorWhite"
            style="@style/common_button_input"
            android:background="@drawable/button_on_off"
            android:enabled="false"
            android:text="@string/text_save"
            app:font="@string/NotoSansKRBold"/>

    </LinearLayout>

</ScrollView>
