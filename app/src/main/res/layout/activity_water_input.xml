<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    style="@style/common_parent_style"
    tools:context="com.gchc.ing.MainActivity"
    android:paddingLeft="30dp"
    android:paddingRight="30dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.gchc.ing.component.CFontTextView
                style="@style/common_textview_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_drinktime"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.gchc.ing.component.CFontTextView
                    android:id="@+id/water_input_date_textview"
                    style="@style/common_edittext_style"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:cursorVisible="false"
                    android:hint="2016.05.20 금요일"
                    android:inputType="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:tag=""/>

                <com.gchc.ing.component.CFontTextView
                    android:id="@+id/water_input_time_textview"
                    style="@style/common_edittext_style"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:cursorVisible="false"
                    android:hint="오전 11:40"
                    android:inputType="none"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:tag=""/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.gchc.ing.component.CFontTextView
                style="@style/common_textview_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_weight="1"
                android:inputType="number"
                android:text="@string/text_drinkvolume"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/water_input_edittext"
                style="@style/common_edittext_style"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:inputType="number"
                android:hint="1212"
                android:paddingRight="15dp"
                android:textAlignment="textEnd"/>

            <com.gchc.ing.component.CFontTextView
                style="@style/common_textview_ea"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="ml"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <com.gchc.ing.component.CFontTextView
                style="@style/common_textview_fields"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/text_targetamount"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.gchc.ing.component.CFontEditText
                android:id="@+id/water_target_input_edittext"
                style="@style/common_edittext_style"
                android:layout_width="wrap_content"
                android:layout_weight="5"
                android:hint="1212"
                android:inputType="number"
                android:paddingRight="15dp"
                android:textAlignment="textEnd" />

            <com.gchc.ing.component.CFontTextView
                style="@style/common_textview_ea"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:text="ml"/>
        </LinearLayout>


        <com.gchc.ing.component.CFontButton
            android:id="@+id/water_input_save_btn"
            style="@style/common_button_input"
            android:layout_marginTop="80dp"
            android:background="@drawable/button_on_off"
            android:enabled="false"
            android:text="@string/text_save"
            android:textColor="@color/colorWhite"
            app:font="@string/NotoSansKRBold"/>

    </LinearLayout>

</LinearLayout>
